{
  "id": "documentary_broll",
  "name": "Documentary B-Roll",
  "category": "style",
  "layer": "overlay",
  "priority": 5,
  "description": "Classic B-roll transition with ken burns zoom effect",

  "component": "./documentary_broll.tsx",
  "variants": ["fade_zoom_in", "fade_zoom_out", "crossfade", "slide_in"],

  "assets": {
    "required": [],
    "optional": ["imageSrc"]
  },

  "props": {
    "imageSrc": { "type": "string", "default": "" },
    "zoomDirection": { "type": "enum", "options": ["in", "out"], "default": "in" },
    "fadeTime": { "type": "number", "default": 30, "min": 10, "max": 60 },
    "zoomAmount": { "type": "number", "default": 1.15, "min": 1.0, "max": 1.3 },
    "overlayOpacity": { "type": "number", "default": 1, "min": 0.5, "max": 1 }
  },

  "timing": {
    "min": 45,
    "max": 300,
    "default": 90,
    "cooldown": 120
  },

  "triggers": {
    "keywords": ["showing", "here", "example", "footage", "scene", "visual", "image", "picture", "looking", "see", "watch", "observe", "location", "place"],
    "punctuation": [],
    "weight": 0.5,
    "max_per_minute": 8
  },

  "conflicts": ["mrbeast_energy", "tiktok_rapid", "gaming_montage"],
  "pairs_with": ["ken_burns", "color_grade", "vignette", "ambient_drone"],
  "modes": ["documentary", "lemmino", "truecrime", "vox"],

  "fallback": {
    "enabled": true,
    "interval": 180,
    "description": "Add b-roll transition every 6 seconds for visual variety"
  }
}
