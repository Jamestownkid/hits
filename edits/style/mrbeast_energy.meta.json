{
  "id": "mrbeast_energy",
  "name": "MrBeast Energy",
  "category": "style",
  "layer": "effect",
  "priority": 10,
  "description": "High energy zoom and shake combo that hits HARD on keywords",

  "component": "./mrbeast_energy.tsx",
  "variants": ["zoom_shake", "flash_zoom", "shake_only", "mega_zoom"],

  "assets": {
    "required": [],
    "optional": ["./assets/impact_flash.png"]
  },

  "props": {
    "intensity": { "type": "number", "default": 1, "min": 0.5, "max": 2 },
    "shakeAmount": { "type": "number", "default": 15, "min": 5, "max": 30 },
    "zoomPeak": { "type": "number", "default": 1.3, "min": 1.1, "max": 1.6 },
    "color": { "type": "color", "default": "#ff0000" },
    "flashDuration": { "type": "number", "default": 5, "min": 2, "max": 10 }
  },

  "timing": {
    "min": 8,
    "max": 30,
    "default": 15,
    "cooldown": 30
  },

  "triggers": {
    "keywords": ["money", "million", "billion", "subscribe", "wow", "crazy", "insane", "let's go", "challenge", "winner", "prize", "expensive", "free", "giving", "amazing", "unbelievable", "dude", "bro"],
    "punctuation": ["!", "!!", "!!!"],
    "weight": 0.9,
    "max_per_minute": 40
  },

  "conflicts": ["lemmino_cinematic", "aesthetic_chill", "podcast_minimal"],
  "pairs_with": ["sound_hit", "bass_drop", "flash_transition"],
  "modes": ["mrbeast", "gaming", "tiktok"],

  "fallback": {
    "enabled": true,
    "interval": 45,
    "description": "If no keywords match, still trigger every ~1.5 seconds for that mrbeast energy"
  }
}
